<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE animation SYSTEM "animation.dtd">
<animation speed="fast">
  <background>img/cpu8086simple.png</background>

  <objects>
    <object_text
        text="mov eax,[100]"
        background_transparent="false"
        color="255,255,255"
        background_color="0,0,128"
        font="Courier,12,bold">ins1</object_text>
    <object_text
        text="mov ebx,[104]"
        background_transparent="false"
        color="255,255,255"
        background_color="0,0,128"
        font="Courier,12,bold">ins2</object_text>
    <object_text
        text="add eax,ebx"
        background_transparent="false"
        color="255,255,255"
        background_color="0,0,128"
        font="Courier,12,bold">ins3</object_text>
    <object_text
        text="mov [108],eax"
        background_transparent="false"
        color="255,255,255"
        background_color="0,0,128"
        font="Courier,12,bold">ins4</object_text>

    <object_text
        text="[100]=1"
        background_transparent="false"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">data1</object_text>
    <object_text
        text="[104]=2"
        background_transparent="false"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">data2</object_text>
    <object_text
        text="[108]=?"
        background_transparent="false"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">data3</object_text>

    <object_text
        text="eax=?"
        background_transparent="true"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">eax</object_text>
    <object_text
        text="ebx=?"
        background_transparent="true"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">ebx</object_text>

    <object_text
        text="00 100 ? 00 ?"
        background_transparent="false"
        font="Courier,12,bold">ins1_decode</object_text>
    <object_text
        text="00 104 ? 01 ?"
        background_transparent="false"
        font="Courier,12,bold">ins2_decode</object_text>
    <object_text
        text="11 ? ? 00 01 ?"
        background_transparent="false"
        font="Courier,12,bold">ins3_decode</object_text>
    <object_text
        text="01 104 ? 00 ?"
        background_transparent="false"
        font="Courier,12,bold">ins4_decode</object_text>

    <object_text
        text="request [100]"
        background_transparent="false"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">data_request1</object_text>
    <object_text
        text="request [104]"
        background_transparent="false"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">data_request2</object_text>
    <object_text
        text="request eax"
        background_transparent="false"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">data_request31</object_text>
    <object_text
        text="request ebx"
        background_transparent="false"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">data_request32</object_text>
    <object_text
        text="request eax"
        background_transparent="false"
        color="0,0,0"
        background_color="255,255,0"
        font="Courier,12,bold">data_request41</object_text>

    <object_text
        text="click on first instruction@to start"
        background_transparent="false"
        color="0,0,0"
        background_color="255,255,255"
        font="Courier,12,bold">message</object_text>

  </objects>

  <programs>

    <program assigned_to="message">
      <setxy
          x="450"
          y="10" />
      <visible value="true" />
    </program>

    <program assigned_to="ins1">
      <setxy
          x="20"
          y="30" />
      <visible value="true" />
      <setproperty
          object="ins1"
          property="color"
          value="255,255,0" />
      <click />
      <setproperty
          object="ins1"
          property="color"
          value="255,255,255" />
      <setproperty
          object="message"
          property="text"
          value="" />
      <right
          x="80"
          dx="5" />
      <down
          y="80"
          dy="5" />
      <right
          x="50"
          dx="5" />
      <up
          y="100"
          dy="5" />
      <right
          x="200"
          dx="5" />
      <down
          y="60"
          dy="5" />
      <trigger
          object="ins1_decode"
          value="decode_ins1" />
      <wait value="unlock" />
      <visible value="false" />
    </program>

    <program assigned_to="ins2">
      <setxy
          x="20"
          y="50" />
      <visible value="true" />
      <wait value="unlock" />
      <state value="normal" />
      <setproperty
          object="ins2"
          property="color"
          value="255,255,0" />
      <blink
          times="6"
          delay="20" />
      <click />
      <setproperty
          object="message"
          property="text"
          value="" />
      <setproperty
          object="ins2"
          property="color"
          value="255,255,255" />
      <right
          x="80"
          dx="5" />
      <down
          y="60"
          dy="5" />
      <right
          x="50"
          dx="5" />
      <up
          y="100"
          dy="5" />
      <right
          x="200"
          dx="5" />
      <down
          y="60"
          dy="5" />
      <trigger
          object="ins2_decode"
          value="decode_ins2" />
      <wait value="unlock" />
      <visible value="false" />
    </program>

