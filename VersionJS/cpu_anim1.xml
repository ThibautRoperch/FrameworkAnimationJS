          delay="20" />
      <click />
      <setproperty
          object="message"
          property="text"
          value="" />
      <setproperty
          object="ins4"
          property="color"
          value="255,255,255" />
      <right
          x="80"
          dx="5" />
      <down
          y="20"
          dy="5" />
      <right
          x="50"
          dx="5" />
      <up
          y="100"
          dy="5" />
      <right
          x="200"
          dx="5" />
      <down
          y="60"
          dy="5" />
      <trigger
          object="ins4_decode"
          value="decode_ins4" />
      <wait value="unlock" />
      <visible value="false" />
    </program>

    <program assigned_to="eax">
      <setxy
          x="590"
          y="120" />
      <visible value="true" />
    </program>

    <program assigned_to="ebx">
      <setxy
          x="590"
          y="140" />
      <visible value="true" />
    </program>


    <program assigned_to="data1">
      <setxy
          x="20"
          y="150" />
      <visible value="true" />
    </program>

    <program assigned_to="data2">
      <setxy
          x="20"
          y="170" />
      <visible value="true" />
    </program>

    <program assigned_to="data3">
      <setxy
          x="20"
          y="190" />
      <visible value="true" />
      <wait value="unlock" />
      <blink
          times="6"
          delay="20" />
    </program>

    <program assigned_to="ins1_decode">
      <setxy
          x="350"
          y="105" />
      <wait value="decode_ins1" />
      <visible value="true" />
      <sleep value="40" />
      <down
          y="38"
          dy="1" />
      <trigger
          object="data_request1"
          value="request100" />
      <wait value="unlock" />
      <down
          y="38"
          dy="1" />
      <sleep value="20" />
      <down
          y="110"
          dy="1" />
      <setproperty
          object="ins1_decode"
          property="text"
          value="update eax=1" />
      <sleep value="20" />
      <down
          y="55"
          dy="1" />
      <right
          x="220"
          dx="5" />
      <up
          y="180"
          dy="5" />
      <sleep value="40" />
      <visible value="false" />
      <setproperty
          object="eax"
          property="text"
          value="eax=1" />
      <setproperty
          object="message"
          property="text"
          value="Click on second instruction@to continue" />
      <trigger
          object="ins1"
