          property="text"
          value="2" />
      <right
          x="250"
          dx="5" />
      <sleep value="20" />
      <setproperty
          object="ins2_decode"
          property="text"
          value="00 104 2 01 ?" />
      <trigger
          object="ins2_decode"
          value="unlock" />
      <visible value="false" />
    </program>

    <program assigned_to="ins3_decode">
      <setxy
          x="350"
          y="105" />
      <wait value="decode_ins3" />
      <visible value="true" />
      <sleep value="40" />
      <down
          y="38"
          dy="1" />
      <trigger
          object="data_request31"
          value="request_eax" />
      <wait value="unlock" />
      <down
          y="38"
          dy="1" />
      <sleep value="20" />
      <down
          y="50"
          dy="1" />
      <sleep value="40" />
      <setproperty
          object="ins3_decode"
          property="text"
          value="compute 2+1" />
      <sleep value="40" />
      <setproperty
          object="ins3_decode"
          property="text"
          value="11 3 2 00 01" />
      <sleep value="60" />
      <down
          y="60"
          dy="1" />
      <setproperty
